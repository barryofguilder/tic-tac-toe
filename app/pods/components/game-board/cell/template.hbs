<button class="
  m-1 w-32 h-32 text-center border-4 border-transparent rounded-full text-5xl
  {{if this.isWinCell "bg-teal-300" "bg-purple-400"}}
  {{if (eq this.gameState.gameEnded false) "hover:bg-teal-300" ""}}
  focus:outline-none focus:shadow-outline-color"
  aria-label="Board cell button"
  {{action this.onClick}}
>
  {{#if (eq @data.player 1)}}
    <GameBoard::GamePiece @piece={{this.gameState.playerOne}} />
  {{else if (eq @data.player 2)}}
    <GameBoard::GamePiece @piece={{this.gameState.playerTwo}} />
  {{/if}}
</button>