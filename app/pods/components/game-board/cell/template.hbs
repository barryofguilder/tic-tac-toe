<button
  type="button"
  class="w-full h-full text-center border-4 border-transparent rounded-full text-5xl sm:text-6xl
    {{if this.isWinCell 'bg-teal-300' 'bg-violet-400'}}
    {{if (eq this.gameState.gameEnded false) 'hover:bg-teal-300' ''}}
    focus:outline-none focus:ring focus:ring-teal-400"
  aria-label="Board cell button"
  {{on "click" this.onClick}}
>
  {{#if (eq @data.player 1)}}
    <GameBoard::GamePiece @piece={{this.gameState.playerOne}} />
  {{else if (eq @data.player 2)}}
    <GameBoard::GamePiece @piece={{this.gameState.playerTwo}} />
  {{/if}}
</button>