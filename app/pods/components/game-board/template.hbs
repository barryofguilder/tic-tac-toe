<div class="flex items-center justify-between">
  <div>
    <button
      class="
        px-3 py-2 border border-purple-400 rounded font-semibold text-sm uppercase tracking-wide
        hover:bg-purple-400 hover:text-purple-800
        focus:outline-none focus:shadow-outline-color
      "
      {{action this.newGame}}
    >
      New Game
    </button>
  </div>
  <div>
    <span class="font-semibold">
      Player 1
    </span>

    <div class="mt-1 flex">
      {{#each this.gamePieces as |gamePiece|}}
        <button
          class="
            text-3xl px-1 {{if (eq this.gameState.playerOne gamePiece) "shadow-outline-color" ""}}
            leading-tight focus:outline-none focus:shadow-outline-color
          "
          {{on "click" (fn this.playerOneSelection gamePiece)}}
        >
          <GameBoard::GamePiece @piece={{gamePiece}} />
        </button>
      {{/each}}
    </div>
  </div>

  <div>
    <span class="font-semibold">
      Player 2
    </span>

    <div class="mt-1 flex">
      {{#each this.gamePieces as |gamePiece|}}
        <button
          class="
            text-3xl px-1 {{if (eq this.gameState.playerTwo gamePiece) "shadow-outline-color" ""}}
            leading-tight focus:outline-none focus:shadow-outline-color
          "
          {{on "click" (fn this.playerTwoSelection gamePiece)}}
        >
          <GameBoard::GamePiece @piece={{gamePiece}} />
        </button>
      {{/each}}
    </div>
  </div>
</div>

{{#if this.gameState.isTieGame}}
  <div class="mt-3 flex justify-center">
    <div class="px-4 py-2 text-2xl bg-teal-300 text-teal-800 rounded shadow-lg">
      🐈 Cat tail 🐈
    </div>
  </div>
{{else if this.gameState.gameEnded}}
  <div class="mt-3 flex justify-center">
    <div class="px-4 py-2 text-2xl bg-teal-300 text-teal-800 rounded shadow-lg">
      🎉 Player {{this.gameState.currentPlayer}} wins  🎉
    </div>
  </div>
{{/if}}

<div class="p-4 pt-8">
  {{#each (chunk 3 this.cells) as |row|}}
    <div class="flex justify-center">
      {{#each row as |cell|}}
        <GameBoard::Cell @data={{cell}} @onClick={{this.makeSelection}} />
      {{/each}}
    </div>
  {{/each}}
</div>
